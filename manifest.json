{
  "manifest_version": 3,
  "name": "ChatGPT Browser Integration",
  "version": "1.5",
  "description": "Access ChatGPT from your browser anywhere! By command or simple button click, you can finally forget about switching tabs.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
      "storage"
  ],
   "background": {
  "service_worker": "background.js"
},
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["style.css"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
